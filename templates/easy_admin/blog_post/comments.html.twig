<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in field.value %}
        <tr>
            <td>{{ comment.id }}</td>
            <td class='text-nowrap'>{{ comment.author.name }}</td>
            <td>{{ comment.content }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>


